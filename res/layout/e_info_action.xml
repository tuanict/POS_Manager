<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout 
         android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal">
	     <LinearLayout 
	         android:layout_width="wrap_content"
	     	 android:layout_height="wrap_content"
	     	 android:orientation="vertical">
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chức vụ"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SĐT"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>
	         
	     </LinearLayout>
	     <LinearLayout 
	         android:layout_width="wrap_content"
	     	 android:layout_height="wrap_content"
	     	 android:orientation="vertical">

	         <EditText
	             android:id="@+id/e_name_tb"
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content" />
	        <RadioGroup android:id="@+id/radio_position"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="20dp">
			    <RadioButton android:id="@+id/radio_manager"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Quản lí"/>
			    <RadioButton android:id="@+id/radio_waiter"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Bồi bàn"/>
			    <RadioButton android:id="@+id/radio_chef"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Đầu bếp"/>
			</RadioGroup>

            <EditText 
            android:id="@+id/e_email_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            /> 
            <EditText 
            android:id="@+id/e_phoneNumber_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
        	android:inputType="phone"/>
            <!-- <EditText 
            android:id="@+id/e_username_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>  -->
            <EditText 
            android:id="@+id/e_pass_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>  
	     </LinearLayout>
		 <LinearLayout 
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:orientation="vertical"
		     android:gravity="center">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click để thay chọn ảnh đại diện"
                android:textColor="#964B00"
                android:textStyle="italic"/>
            
		     <ImageView
		         android:id="@+id/picture_profile"
		         android:layout_width="match_parent"
		         android:layout_height="match_parent"
		         android:src="@drawable/man_brown" />
	     </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/m_e_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Button.Small"
            android:layout_marginTop="30dp"
            android:layout_weight="2.74"
            android:text="Hoàn thành" />

        <Button
            android:id="@+id/m_e_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Button.Small"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="40.95"
            android:text="Hủy" />
    </LinearLayout>

</LinearLayout>
