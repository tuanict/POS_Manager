<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#dddddd">
    
    <!-- <TextView 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:background="#000000"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="30dp"/> -->
    <LinearLayout 
         android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal">
	     <LinearLayout 
	         android:layout_width="wrap_content"
	     	 android:layout_height="wrap_content"
	     	 android:orientation="vertical">
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên"
            android:layout_marginTop="20dp"/>
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chức vụ"
            android:layout_marginTop="20dp"/>
	          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số CMTND"
            android:layout_marginTop="20dp"/>
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="20dp"/>
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SĐT"
            android:layout_marginTop="20dp"/>
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:layout_marginTop="20dp"/>
	         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:layout_marginTop="20dp"/>
	         
	     </LinearLayout>
	     <LinearLayout 
	         android:layout_width="wrap_content"
	     	 android:layout_height="wrap_content"
	     	 android:orientation="vertical">

	         <EditText
	             android:id="@+id/e_name_tb"
	             android:layout_width="226dp"
	             android:layout_height="wrap_content" />

	        <EditText 
            android:id="@+id/e_position_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
	        <EditText 
            android:id="@+id/e_CMND_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>  
            <EditText 
            android:id="@+id/e_email_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/> 
            <EditText 
            android:id="@+id/e_phoneNumber_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <EditText 
            android:id="@+id/e_username_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/> 
            <EditText 
            android:id="@+id/e_pass_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>  
	     </LinearLayout>
    </LinearLayout>
    <LinearLayout 
	         android:layout_width="wrap_content"
	     	 android:layout_height="wrap_content"
	     	 android:orientation="horizontal"
	     	 android:layout_marginTop="15dp">
	         <ImageView 
                   android:id="@+id/picture_profile"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/man_brown"/>
	          <Button 
	             android:id="@+id/m_e_done_button"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Hoàn thành"
                 android:layout_marginTop="30dp"/>
	         <Button 
	             android:id="@+id/m_e_cancel_button"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Hủy"
                 android:layout_marginTop="30dp"
                 android:layout_marginLeft="20dp"/>
	        
	     </LinearLayout>

</LinearLayout>
